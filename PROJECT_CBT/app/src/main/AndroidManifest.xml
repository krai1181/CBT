<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avi.project_cbt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EventActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.InfoActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.HistoryActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.PanicActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".activity.AutomaticThougntsActivity" />
        <activity android:name=".activity.CognitiveDistortionActivity" />
        <activity android:name=".activity.BehaviorActivity" />
        <activity android:name=".activity.PersonalNotesActivity" />
        <activity android:name=".activity.EmotionsActivity" />
        <activity android:name=".activity.HelpfulThoughtsActivity" />
        <activity android:name=".activity.TextNotesActivity" />
        <activity android:name=".activity.IneffectiveBehaviorActivity" />
        <activity android:name=".adapter.SimpleEMail">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
            </intent-filter>
        </activity>
    </application>

</manifest>