<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_thought"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/helpful_thoughts"
            android:id="@+id/txtInformation"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_green_u"
            android:id="@+id/btnEditHelp"
            android:background="@color/not_color"
            android:layout_alignParentLeft="false"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/gradient3"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerViewHelpful">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/gradient_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_u"
            android:id="@+id/btnPlusHelp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:background="@color/not_color"
            />
        <Button
            android:layout_width="355dp"
            android:layout_height="30dp"
            android:id="@+id/btnBackHelp"
            android:background="@drawable/gradient_button_u"
            android:layout_gravity="center_horizontal"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="#d6e3ea"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
</LinearLayout>
